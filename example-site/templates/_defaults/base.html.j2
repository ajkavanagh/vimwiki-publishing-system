<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en-us">
<head>
  <link href="http://gmpg.org/xfn/11" rel="profile" />
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />

  <!-- Enable responsiveness on mobile devices-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1" />

  {% block title -%}
  <title>{{ Site.Params.Title }} &middot; {{ Site.Params.Author }}</title>
  {% endblock -%}

  {% block css -%}
  <!-- CSS -->
  <link rel="stylesheet" href="{{ "/css/poole.css" | absURL }}" />
  <link rel="stylesheet" href="{{ "/css/hyde.css" | absURL }}" />
  <link rel="stylesheet" href="{{ "/css/poole-overrides.css" | absURL }}" />
  <link rel="stylesheet" href="{{ "/css/hyde-overrides.css" | absURL }}" />
  <link rel="stylesheet" href="{{ "/css/hyde-x.css" | absURL }}" />
  {% if Site.Params.highlight -%}<link rel="stylesheet" href="{{ "/css/highlight/" | absURL }}{{ Site.Params.highlight }}.css" />{% endif %}
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=PT+Sans:400,400italic,700|Abril+Fatface" />
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" />
  {% endblock -%}

  <!-- Icons -->
  <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ "/touch-icon-144-precomposed.png" | absURL }}" />
  <link href="{{ "/favicon.png" | absURL }}" rel="icon" />

  <!-- RSS -->
  {% set siteTitle = Site.Params.title -%}
  {% set authorName = Site.Params.Author -%}
  {% if Data.RSSLink -%}<link href="{{ Data.RSSLink }}" rel="alternate" type="application/rss+xml" title="{{ siteTitle }} &middot; {{ authorName }}" />{% endif -%}

  <meta name="description" content="{% if Page.Description -%}{{ Page.Description }}{% else -%}{{ Site.Params.defaultDescription }}{% endif -%}" />
  <meta name="keywords" content="{% if Page.Params.keywords -%}{% for item in enumerate(Page.Params.keywords) -%}{% if item.index > 0 -%},{% endif -%}{{ item.item }}{% endfor -%}{% else %}{{ Site.Params.defaultKeywords }}{% endif -%}" />
</head>

<body {% if Site.Params.scheme -%} class="{{ Site.Params.scheme }}"{% endif -%}>
{% block sidebar %}
{% include "sidebar" -%}
{% endblock %}

{% block main %}
<!-- content goes here -->
{% endblock -%}

{% block footer %}
{% endblock -%}

{% if Site.Params.highlight -%}<script src="{{ "/js/highlight.pack.js" | absURL }}"></script>
<script>hljs.initHighlightingOnLoad();</script>{% endif -%}
</body>
</html>
